@model Answer 
@{
    ViewData["Title"] = "EditAnswerForm";
}

<h1>Edit Answer</h1>
<form method="post" action="/qanda/editanswer">

   
    <fieldset>

        <legend>Edit Answer</legend>
        <input type="hidden" name="questionId" value="@ViewBag.qid" />
        <div class="form-group">
            UserName: <input class="form-control" type="text" name="username" value="@Model.username" />

        </div>
        <div class="form-group">

            Detail: <input class="form-control" type="text" name="detail" value="@Model.detail" />

        </div>

        <div class="form-group">

            Posted: <input class="form-control" type="datetime-local" name="posted" value="@Model.posted" />

        </div>
        <div class="form-group">

            Up Votes: <input class="form-control" type="number" name="upvotes" value="@Model.upvotes"/>

        </div>

    </fieldset>

    <input type="submit" value="Add Answer" />

</form>